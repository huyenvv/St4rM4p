@model IEnumerable<StarMap.Models.Event>
@using Resources

@{
    ViewBag.Title = Resources.List + " " + Resources.Event.ToLower();
}

<div class="col-md-3">
    @Html.Partial("_AdminMenu")
</div>
<div class="col-md-9">
    <h3 class="page-header">@ViewBag.Title</h3>
    <p>
        @Html.ActionLink(Resources.Create, "NewOrEdit", null, new { Class = "btn btn-primary" })
    </p>
    <table class="table">
        <tr>
            <th>
                @Resources.Name
            </th>
            <th>
                @Resources.Location
            </th>
            <th>
                @Resources.Category
            </th>
            <th>
                @Resources.Address
            </th>
            <th>
                Is Hot
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Location)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Category.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Address)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.IsHot)
                </td>
                <td>
                    @Html.ActionLink(Resources.Edit, "NewOrEdit", new { id = item.Id }) |
                    @Html.ActionLink(Resources.Delete, "Delete", new { id = item.Id }, new { Class = "confirmDelete" })
                </td>
            </tr>
        }

    </table>
</div>