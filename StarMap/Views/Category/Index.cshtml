@model IEnumerable<StarMap.Models.Category>

@{
    ViewBag.Title = "Index";
}

<div class="col-md-3">
    @Html.Partial("_AdminMenu")
</div>
<div class="col-md-9">
    <h3 class="page-header">@ViewBag.Title</h3>
    <p>
        @Html.ActionLink("Create New", "NewOrEdit", null, new { Class = "btn btn-primary" })
    </p>
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.ActionLink("Sửa", "NewOrEdit", new { id = item.Id }) |
                    @Html.ActionLink("Xóa", "Delete", new { id = item.Id }, new { Class = "confirmDelete" })
                </td>
            </tr>
        }

    </table>
</div>